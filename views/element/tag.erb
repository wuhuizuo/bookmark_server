<div class="btn-group tag">
  <a class="btn btn-default" href="/bookmarks?tag=<%= tag['name'] %>">
    <span class="glyphicon glyphicon-tag"></span><span id="tag_name"><%= tag['name'] %></span>
    <span class="badge"><%= tag['bookmark_ids'].length %></span>
  </a>
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li>
      <a href="#" class="tag_edit" data-toggle="modal" data-target="#tag_dialog">
        <span class="glyphicon glyphicon-edit">edit</span>
      </a>
    </li>
    <li>
      <a href="#" class="tag_delete" data-toggle="modal" data-target="#tag_dialog">
        <span class="glyphicon glyphicon-trash">delete</span>
      </a>
    </li>
  </ul>
</div>